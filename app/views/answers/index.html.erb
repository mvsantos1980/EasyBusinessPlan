

<h1>Respostas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="text-info">Grupo</th>
      <th class="text-info">Pergunta</th>
      <th class="text-info">Resposta</th>
      <th colspan="3" class="text-info">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><strong class="text-info"><%= answer.question.group.descripition %></strong></td>
        <td><strong><%= answer.question.descripition %></strong></td>
        <td><%= answer.answer %></td>
        <td><%= link_to 'Editar', edit_answer_path(answer), :class => 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

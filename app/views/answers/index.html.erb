

<h1>Respostas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Pergunta</th>
      <th>Resposta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><strong><%= answer.question.descripition %></strong></td>
        <td><%= answer.answer %></td>
        <td><%= link_to 'Editar', edit_answer_path(answer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

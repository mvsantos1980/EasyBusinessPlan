

<h1>Contextualização</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Questão</th>
      <th>Resposta</th>
    </tr>
  </thead>

  <tbody>
    <% @contextualizations.each do |contextualization| %>
      <tr>
        <td><%= contextualization.descripition %></td>
        <td>
          <% @answer.each do |resposta| %>
            <%= resposta.question_id == contextualization.id ? resposta.answer : "" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ver\Editar respostas', answers_path %>
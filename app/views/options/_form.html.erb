<%= form_with(model: option, local: true) do |form| %>
  <% if option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
      <% option.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label 'Questão' %>
    <%= form.select :question_id, Question.all.collect { |question| [question.descripition, question.id] },{prompt: '(Selecione a questão)'}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'Opção' %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <%= form.submit %>

<% end %>

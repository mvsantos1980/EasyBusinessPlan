

<h1>Opções <small style="float: right"><%= link_to 'Nova Opção', new_option_path, :class => 'btn btn-success' %></small></h1>

<table class="table table-hover">
  <thead>
    <tr class="bg-dark">
      <th class="text-light">Questão</th>
      <th class="text-light">Opção</th>
      <th class="text-light" colspan="2">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td class="text-info"><strong><%= option.question.descripition %></strong></td>
        <td><%= option.description %></td>
        <td><%= link_to 'Editar', edit_option_path(option), :class => 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Excluir', option, method: :delete, :class => 'btn btn-sm btn-danger', data: { confirm: 'Você está certo disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Opção', new_option_path, :class => 'btn btn-block btn-success' %>

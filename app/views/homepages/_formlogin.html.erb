<%= form_for(:user, :url => session_path(:user)) do |form| %>
  <div class="form-group">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label "Senha" %><br />
    <%= form.password_field :password, autocomplete: "current-password", :class => "form-control" %>
  </div>

  <%# if devise_mapping.rememberable? -%>
<!--    <div class="field">-->
      <%#= form.check_box :remember_me %>
      <%#= form.label "Lembrar-me" %>
<!--    </div>-->
  <%# end -%>

  <div class="actions">
    <%= form.submit "Entrar", class: 'btn btn-block btn-success' %>
  </div>
<% end %>


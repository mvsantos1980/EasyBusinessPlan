<%= form_for(:user, :url => registration_path(:user)) do |form| %>
  <div class="form-group">
    <%= form.label "Nome" %>
    <%= form.text_field :username, id: :username, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label "Senha" %>
    <%= form.password_field :password, id: :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label "Confirme sua senha" %>
    <%= form.password_field :password_confirmation, id: :password_confirmation, class: 'form-control' %>
  </div>
